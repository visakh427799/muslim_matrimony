                </div>
            </div>




        </div>
    </div>


    <script>
        async function deleteAccount(id) {
            let spn = document.getElementById("spin");
            spn.className = "spinner-border text-primary";


            let obj = {
                id: id,
            }
            let res = await axios.post('https://muslim-matrimony.herokuapp.com/delete_account', obj);
            let data = res.data;

            if (data.delete) {
                spn.className = "";

                Swal.fire('Success...', 'Account deleted', 'success')
            }

            location.href = "/user/register";
        }
    </script>




