                                    <script>

                                        async function changePassword(id,token){
                                            console.log(id,token)
                                                    let spn = document.getElementById("spin");
                                            spn.className = "spinner-border text-primary";
                                            let bt = document.getElementById("bt");
                                            //bt.disabled = true;
                                            let password=document.getElementById("confirm").value;
                                            let obj={id,password}
                                            let res=await axios.post('http://localhost:8000/change_password',{obj})
                                            if (res.data.success) {
                                                        spn.className =""
                                                        bt.disabled = true;
                                                        Swal.fire('Success...', 'Password  has been reset successfully ', 'success');
                                                         location.href="/user/logout"

                                                    }
                                                    else{
                                                        bt.disabled = true;
                                                         spn.className =""
                                                       Swal.fire({
                                                        icon: 'error',
                                                        title: 'Oops...',
                                                        text: res.data.message,
                                                        footer: '<a href>Why do I have this issue?</a>'
                                                        })
                                                    }
                                        }
                                    </script>
