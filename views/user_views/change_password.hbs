                <div class="  p-5">
                    <h2>Change Password</h2>
                    <hr>

                    <div class="change-pass text-small">
                        <label for="">Current Password</label>
                        <input id="current" class="form-control" type="password" placeholder=" ">
                        <label for="">New Password</label>
                        <input id="new" class="form-control" type="password" placeholder=" ">
                        <label for="">Confirm New Password</label>
                        <input id="confirm" class="form-control" type="password" placeholder=" ">
                        <button onclick="changePassword('{{id}}')" id="bt"
                            class="form-control mt-3 btn btn-info ">Submit</button>
                        <div class="row mt-3">
                            <div class="col-md-4">

                            </div>
                            <div class="col-md-4 text-center">
                                <div class=" mt-3" role="status" id="spin">

                                </div>
                            </div>
                            <div class="col-md-4">

                            </div>
                        </div>
                    </div>

                    <script>
                        async function changePassword(id) {
                            let spn = document.getElementById("spin");
                            spn.className = "spinner-border text-primary";
                            let bt = document.getElementById("bt");

                            let current = document.getElementById("current").value;
                            let newPass = document.getElementById("new").value;
                            let password = document.getElementById("confirm").value;

                            if (password) {
                                let obj = { id, password }
                                console.log(obj);
                                try {
                                    let res = await axios.post('https://muslim-matrimony.herokuapp.com/change_password', { obj })
                                    if (res.data.success) {
                                        spn.className = ""

                                        Swal.fire('Success...', 'Password changed successfully ', 'success');

                                        location.href = "/user/logout"
                                    }
                                    else {
                                        bt.disabled = true;
                                        spn.className = ""
                                        Swal.fire({
                                            icon: 'error',
                                            title: 'Oops...',
                                            text: res.data.message,
                                            footer: '<a href>Why do I have this issue?</a>'
                                        })
                                    }

                                }
                                catch (error) {
                                    console.log(error)
                                }
                            }

                            else {
                                alert("Invalid inputs")
                            }

                        }
                    </script>



